{
  "tasks": {
    "start": "deno run --allow-net --allow-env --env-file src/main.ts",
    "dev": "deno run --allow-net --allow-env --env-file --watch src/main.ts"
  },
  "imports": {
    "@db/postgres": "jsr:@db/postgres@^0.19.5",
    "@oak/commons": "jsr:@oak/commons@^1.0.1",
    "@std/assert": "jsr:@std/assert@1",
    "@std/datetime": "jsr:@std/datetime@^0.225.5",
    "@std/http": "jsr:@std/http@1",
    "@oak/oak": "jsr:@oak/oak@^17.1.6"
  },
  "fmt": {
    "singleQuote": true,
    "lineWidth": 100,
    "useTabs": false,
    "semiColons": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": [
        "ban-untagged-todo",
        "camelcase",
        "eqeqeq",
        "explicit-function-return-type",
        "no-console",
        "no-const-assign",
        "no-eval",
        "no-external-import",
        "no-non-null-asserted-optional-chain",
        "no-self-compare",
        "no-sparse-arrays",
        "no-useless-rename",
        "no-undef",
        "prefer-ascii"
      ]
    }
  }
}
